@model LCMonitoringSystem3.Models.Region

@{
    ViewData["Title"] = "Деталі";
    Layout = "~/Views/Shared/_LayoutForDB.cshtml";
}

<h1 class="text-center">Регіон:</h1>

<table class="table table-striped table-bordered" style="width:30%; margin: auto;">
    <tbody>
        <tr>
            <td>
                Назва регіону:
            </td>

            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
    </tbody>
</table>

<div class="container" style="margin-top: 10px; margin-left: auto;">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary"><i class="fas fa-pen-square"></i> Редагувати</a> |
    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
</div>
