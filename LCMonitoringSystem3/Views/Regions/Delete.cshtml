@model LCMonitoringSystem3.Models.Region

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutForDB.cshtml";
}


<h2 class="text-center">Ви впевнені що хочете видалити цей запис?</h2>
<div>
    <hr />
    <table class="table table-striped table-bordered" style="width:30%; margin: auto;">
    <tbody>
        <tr>
            <td>
                Назва регіону:
            </td>

            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
    </tbody>
    </table>
</div>

<div class="container" style="margin-top: 10px; margin-left: auto;">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
    </form>
</div>