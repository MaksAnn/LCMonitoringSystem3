@model LCMonitoringSystem3.Models.Region

@{
    ViewData["Title"] = "Додати";
    Layout = "~/Views/Shared/_LayoutForDB.cshtml";
}

<h1 class="text-center">Додати новий запис:</h1>

<hr />
<div class="row">
    <div class="col-md-4" style="margin: auto;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
